<div class="container">
  <%= bootstrap_form_for(@img,url: {action: 'update'}, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-8") do |f| %>
    <%= f.text_field :title, wrapper: { class: 'row' } %>
    <%= f.file_field :image, wrapper: { class: 'row' } %>
    <%= f.text_field :inyo, wrapper: { class: 'row' } %>
    <%= f.text_field :tag_list, value: @img.tag_list.join(","), wrapper: { class: 'row' }  %>
    <%= f.submit "完了",{ class: 'btn btn-primary' }%>
  <% end %>
  <ui id="alltag">
    <%= @all_tag_list.join(",")%>
  </ui>
</div>
<script type="text/javascript">
  $(function() {
    $(".datepicker").datepicker({dateFormat: 'yy-mm-dd'});
    alltag = (document.getElementById('alltag')).innerHTML;
    tagary = alltag.split(',');
    $('#tag_tag_list').tagit({
      singleField: true,
      availableTags: tagary,
    });
  });
</script>
