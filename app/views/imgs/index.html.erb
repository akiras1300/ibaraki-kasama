<div class="txc">
<h1 class="h2">画像一覧</h1>
</div>
<%= paginate @img %>
<div class="masonry-container">
    <% @img.each do |r| %>
      <div class="mas-box">
        <%= link_to(img_path(r)) do %>
          <div class="bbox">
            <%= image_tag r.image.mid.url if r.image?  %>
            <%= r.title %>
            <div class="row imgitem">
              <div class="col"><%= time_ago_in_words(r.created_at)+"前" %></div>
            </div>
          </div>
        <% end %>
        <div  class="tags">
          <% r.tags.each do |tag| %>
            <%= link_to(tag_path(tag)) do%>
            <%= p tag.name %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
</div>
<%= paginate @img %>
