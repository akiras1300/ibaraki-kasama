<div id="wrapper">
  <div class="txc">
    <h1 class="h5">
      twitter一覧
    </h1>
    <div  class="stags mg10">
      <%= link_to("/urls", class: "btn btn-primary btn-sm") do%>
        <%= p "外部サイト" %>
      <% end %>
      <%= link_to("/urls/facebook", class: "btn btn-primary btn-sm") do%>
        <%= p " facebook" %>
      <% end %>
      <%= link_to("/urls/twitter", class: "btn btn-primary btn-sm") do%>
        <%= p " twitter" %>
      <% end %>
      <%= link_to("/urls/instagram", class: "btn btn-primary btn-sm") do%>
        <%= p " instagram" %>
      <% end %>
    </div>
  </div>
    <%= paginate @sns %>
    <div class="row d-flex justify-content-center mg10">
        <div class="col-sm-6">
          <div class="bbox">
            <a class="twitter-timeline"  href="https://twitter.com/hashtag/%E7%AC%A0%E9%96%93" data-widget-id="686225464503865344">#笠間 のツイート</a>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="bbox">
            <a class="twitter-timeline"  href="https://twitter.com/hashtag/%E8%8C%A8%E5%9F%8E" data-widget-id="686225585450819584">#茨城 のツイート</a>
          </div>
        </div>
      <% @sns.each do |r| %>
        <div class="col-sm-4">
          <div class="bbox">
            <a class="twitter-timeline" height="350"
              href="https://twitter.com/<%= r.twitter %>">
            Tweets by @<%= r.name %>
            </a>
          </div>
          <div class="tags">
          <%= link_to("/tags/show/#{r.id}") do %>
                  <%= r.name %>
          <% end %>
          </div>
        </div>
      <% end %>
  </div>
  <%= paginate @sns %>
  </div>
  <script>
  $(document).on('ready turbolinks:load', function(){
  !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
});
  </script>
